<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatApp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatApplication">
        <activity android:name="com.example.chatApp.specificchat"></activity>
        <activity android:name="com.example.chatApp.UpdateProfile" />
        <activity android:name="com.example.chatApp.ProfileActivity" />
        <activity android:name="com.example.chatApp.chatActivity" />
        <activity android:name="com.example.chatApp.setProfile" />
        <activity android:name="com.example.chatApp.otpAuthentication" />
        <activity android:name="com.example.chatApp.MainActivity" />
        <activity android:name="com.example.chatApp.splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>